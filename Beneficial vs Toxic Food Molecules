                    </select>
                </div>
                
                <div class="selector-section toxic">
                    <div class="selector-title toxic">Select Toxic Contaminant:</div>
                    <select class="form-select" id="toxic-select" onchange="updateDisplay()">
                        <option value="">-- Choose a molecule --</option>
                        <option value="formaldehyde">Formaldehyde (CH₂O)</option>
                        <option value="co">Carbon Monoxide (CO)</option>
                        <option value="methanol">Methanol (CH₃OH)</option>
                        <option value="h2s">Hydrogen Sulfide (H₂S)</option>
                        <option value="so2">Sulfur Dioxide (SO₂)</option>
                    </select>
                </div>
            </div>
            
            <!-- Comparison Display -->
            <div class="comparison-grid" id="comparison-grid">
                <div class="empty-state">
                    Select molecules from the dropdowns above to view their properties
                </div>
            </div>
        </div>
