        function createMoleculeCard(moleculeKey, molecule) {
            const badgeClass = molecule.type === 'beneficial' ? 'safe-badge' : 'hazard-badge';
            const polarityBadge = molecule.polarityBadge ? `<span class="safe-badge">${molecule.polarityBadge}</span>` : '';
            
            return `
                <div class="molecule-card ${molecule.type} show">
                    <div class="molecule-header">
                        <div class="molecule-name">${molecule.name}</div>
                        <div class="molecule-formula">${molecule.formula}</div>
                        <div class="molecule-use">${molecule.use}</div>
                    </div>
                    <div class="geometry-info">
                        ${molecule.geometry}
                    </div>
                    <div class="properties-grid">
                        <div class="property-row">
                            <div class="property-label">Molar Mass</div>
                            <div class="property-value">${molecule.size}</div>
                        </div>
                        <div class="property-row">
                            <div class="property-label">Molecular Mimicry</div>
                            <div class="property-value">${molecule.mimicry}</div>
                        </div>
                        <div class="property-row">
                            <div class="property-label">Solubility</div>
                            <div class="property-value">${molecule.solubility}</div>
                        </div>
                        <div class="property-row">
                            <div class="property-label">Polarity</div>
                            <div class="property-value">${molecule.polarity} ${polarityBadge}</div>
                        </div>
                        <div class="property-row">
                            <div class="property-label">Reactivity</div>
                            <div class="property-value">${molecule.reactivity}</div>
                        </div>
                        <div class="property-row">
                            <div class="property-label">Tissue Accumulation</div>
                            <div class="property-value">${molecule.accumulation}</div>
                        </div>
                        <div class="property-row">
                            <div class="property-label">Biological Effect</div>
                            <div class="property-value">${molecule.biological} <span class="${badgeClass}">${molecule.biologicalBadge}</span></div>
                        </div>
                    </div>
                </div>
            `;
        }
        
        function updateDisplay() {
            const beneficialKey = document.getElementById('beneficial-select').value;
            const toxicKey = document.getElementById('toxic-select').value;
            const grid = document.getElementById('comparison-grid');
            
            // If nothing is selected, show empty state
            if (!beneficialKey && !toxicKey) {
                grid.innerHTML = '<div class="empty-state">Select molecules from the dropdowns above to view their properties</div>';
                return;
            }
            
            let html = '';
            
            // Add beneficial molecule card if selected
            if (beneficialKey) {
                html += createMoleculeCard(beneficialKey, molecules[beneficialKey]);
            } else {
                // Add placeholder for missing beneficial molecule
                html += `<div class="molecule-card" style="display: flex; align-items: center; justify-content: center; padding: 40px; text-align: center; color: #718096; background: #f8f9fa; border: 2px dashed #cbd5e0; border-radius: 10px;">Select a beneficial molecule to compare</div>`;
            }
            
            // Add toxic molecule card if selected
            if (toxicKey) {
                html += createMoleculeCard(toxicKey, molecules[toxicKey]);
            } else {
                // Add placeholder for missing toxic molecule
                html += `<div class="molecule-card" style="display: flex; align-items: center; justify-content: center; padding: 40px; text-align: center; color: #718096; background: #f8f9fa; border: 2px dashed #cbd5e0; border-radius: 10px;">Select a toxic molecule to compare</div>`;
            }
            
            grid.innerHTML = html;
        }
    </script>
</body>
</html>
