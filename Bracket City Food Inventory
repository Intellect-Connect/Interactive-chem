        // State
        let currentFilter = 'all';
        let currentSort = null;
        let sortAscending = true;

        // Initialize
        function init() {
            renderTable(inventoryData);
            updateStats();
            setupEventListeners();
        }

        // Render Table
        function renderTable(data) {
            const tbody = document.getElementById('inventoryBody');
            const noResults = document.getElementById('noResults');
            
            if (data.length === 0) {
                tbody.innerHTML = '';
                noResults.style.display = 'block';
                return;
            }
            
            noResults.style.display = 'none';
            tbody.innerHTML = data.map(item => `
                <tr>
                    <td><strong>${item.item}</strong></td>
                    <td><strong>${item.name}</strong></td>
                    <td>${item.category}</td>
                    <td><span class="type-badge type-${item.type.toLowerCase().replace(' ', '')}">${item.type}</span></td>
                    <td>${item.iron}</td>
                    <td>${item.calcium}</td>
                    <td class="compound-info">${item.compounds}</td>
                    <td><span class="risk-badge risk-${item.risk.toLowerCase().replace('/', '\\/')}">${item.risk}</span></td>
                    <td>${item.vulnerable !== 'None' ? '<span class="vulnerable-warning">' + item.vulnerable + '</span>' : 'None'}</td>
                    <td>${item.shelf}</td>
                    <td>$${item.cost.toFixed(2)}</td>
                </tr>
            `).join('');
        }

        // Update Statistics
        function updateStats() {
            const fortified = inventoryData.filter(item => item.type === 'Fortified').length;
            const whole = inventoryData.filter(item => item.type === 'Whole Food').length;
            const highRisk = inventoryData.filter(item => item.type === 'High Risk').length;
            const contamination = inventoryData.filter(item => item.risk !== 'Low').length;
            
            document.getElementById('total-items').textContent = inventoryData.length;
            document.getElementById('fortified-count').textContent = fortified;
            document.getElementById('whole-count').textContent = whole;
            document.getElementById('risk-count').textContent = highRisk;
            document.getElementById('contamination-count').textContent = contamination;
        }

        // Filter Data
        function filterData() {
            const searchTerm = document.getElementById('searchBar').value.toLowerCase();
            
            let filtered = inventoryData.filter(item => {
                const matchesSearch = 
                    item.name.toLowerCase().includes(searchTerm) ||
                    item.category.toLowerCase().includes(searchTerm) ||
                    item.compounds.toLowerCase().includes(searchTerm) ||
                    item.risk.toLowerCase().includes(searchTerm) ||
                    item.vulnerable.toLowerCase().includes(searchTerm);
                
                const matchesFilter = 
                    currentFilter === 'all' ||
                    (currentFilter === 'fortified' && item.type === 'Fortified') ||
                    (currentFilter === 'whole' && item.type === 'Whole Food') ||
                    (currentFilter === 'highrisk' && item.type === 'High Risk') ||
                    (currentFilter === 'contamination' && item.risk !== 'Low') ||
                    (currentFilter === 'arsenic' && item.risk.toLowerCase().includes('arsenic')) ||
                    (currentFilter === 'lead' && item.risk.toLowerCase().includes('lead')) ||
                    (currentFilter === 'mercury' && item.risk.toLowerCase().includes('mercury')) ||
                    (currentFilter === 'cadmium' && item.risk.toLowerCase().includes('cadmium'));
                
                return matchesSearch && matchesFilter;
            });
            
            renderTable(filtered);
        }

        // Sort Data
        function sortData(column) {
            const sortedData = [...inventoryData].sort((a, b) => {
                let valA = a[column];
                let valB = b[column];
                
                // Handle numeric values
                if (typeof valA === 'number' && typeof valB === 'number') {
                    return sortAscending ? valA - valB : valB - valA;
                }
                
                // Handle string values
                valA = String(valA).toLowerCase();
                valB = String(valB).toLowerCase();
                
                if (valA < valB) return sortAscending ? -1 : 1;
                if (valA > valB) return sortAscending ? 1 : -1;
                return 0;
            });
            
            sortAscending = currentSort === column ? !sortAscending : true;
            currentSort = column;
            
            renderTable(sortedData);
        }

        // Setup Event Listeners
        function setupEventListeners() {
            // Search
            document.getElementById('searchBar').addEventListener('input', filterData);
            
            // Filter buttons
            document.querySelectorAll('.filter-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
                    this.classList.add('active');
                    currentFilter = this.dataset.filter;
                    filterData();
                });
            });
            
            // Sort
            document.querySelectorAll('th[data-sort]').forEach(th => {
                th.addEventListener('click', function() {
                    sortData(this.dataset.sort);
                });
            });
        }

        // Initialize on load
        window.addEventListener('DOMContentLoaded', init);
    </script>
</body>
</html>
