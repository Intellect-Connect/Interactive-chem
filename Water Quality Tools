    <script>
        function showTab(tabNum) {
            // Hide all tabs
            document.querySelectorAll('.tab-content').forEach(content => {
                content.classList.remove('active');
            });
            document.querySelectorAll('.tab').forEach(tab => {
                tab.classList.remove('active');
            });
            
            // Show selected tab
            document.getElementById('tab' + tabNum).classList.add('active');
            document.querySelectorAll('.tab')[tabNum - 1].classList.add('active');
        }
        
        function toggleSubstance(card) {
            card.classList.toggle('selected');
        }
        
        function calculatePPM() {
            // Get input values
            const emptyCup = parseFloat(document.getElementById('empty-cup').value);
            const cupWater = parseFloat(document.getElementById('cup-water').value);
            const finalMass = parseFloat(document.getElementById('final-mass').value);
            
            // Check if any fields are empty or invalid
            if (isNaN(emptyCup) || isNaN(cupWater) || isNaN(finalMass)) {
                alert('Please fill in all three mass measurements with valid numbers');
                return;
            }
            
            if (emptyCup <= 0 || cupWater <= 0 || finalMass <= 0) {
                alert('Please enter positive values for all measurements');
                return;
            }
            
            // Validation checks
            if (cupWater <= emptyCup) {
                alert('Error: Mass with water should be greater than empty cup mass. Check your measurements!');
                return;
            }
            
            if (finalMass <= cupWater) {
                alert('Error: Final mass should be greater than mass with water (you added substances!). Check your measurements!');
                return;
            }
            
            // Calculate masses
            const waterMass = cupWater - emptyCup;
            const totalSubstances = finalMass - cupWater;
            
            // Check if total substances is reasonable (should be around 40g)
            if (totalSubstances < 30 || totalSubstances > 50) {
                const proceed = confirm(`Warning: Total substances added = ${totalSubstances.toFixed(1)}g. Expected about 40g (10g each of 4 substances). Continue anyway?`);
                if (!proceed) return;
            }
            
            // Calculate PPM: (mass of contaminants / mass of water) × 1,000,000
            const ppm = (totalSubstances / waterMass) * 1000000;
            
            // Display results
            document.getElementById('ppm-value').textContent = ppm.toFixed(0) + ' ppm';
            
            let details = `
                <strong>Calculation:</strong><br>
                • Water mass: ${waterMass.toFixed(1)}g<br>
                • Total contaminants: ${totalSubstances.toFixed(1)}g<br>
                • PPM = (${totalSubstances.toFixed(1)} ÷ ${waterMass.toFixed(1)}) × 1,000,000 = ${ppm.toFixed(0)} ppm<br><br>
            `;
            
            if (ppm > 500) {
                const factor = (ppm / 500).toFixed(0);
                details += `<div class="warning-box"><strong>⚠️ UNSAFE:</strong> This is ${factor}× over the EPA safe limit of 500 ppm!</div>`;
            } else {
                details += `<div class="success-box"><strong>✓ SAFE:</strong> This is below the EPA safe limit of 500 ppm.</div>`;
            }
            
            document.getElementById('ppm-details').innerHTML = details;
            document.getElementById('ppm-result').classList.add('show');
        }
        
        function calculateFiltration() {
            const filterBefore = parseFloat(document.getElementById('filter-before').value) || 0;
            const filterAfter = parseFloat(document.getElementById('filter-after').value) || 0;
            const volumeFiltered = parseFloat(document.getElementById('volume-filtered').value) || 100;
            
            if (filterBefore === 0 || filterAfter === 0) {
                alert('Please enter filter mass measurements');
                return;
            }
            
            // Validation check
            if (filterAfter < filterBefore) {
                alert('Error: Filter mass after should be greater than or equal to before (material was trapped!). Check your measurements!');
                return;
            }
            
            // Calculate trapped mass
            const trapped = filterAfter - filterBefore;
            
            // Expected contaminants in filtered volume (10g per 100mL based on original recipe)
            const expected = (volumeFiltered / 100) * 10;
            
            // Calculate percentage removed
            const percentRemoved = (trapped / expected) * 100;
            
            // Prevent impossible percentages
            if (percentRemoved > 100) {
                alert(`Warning: Calculated ${percentRemoved.toFixed(0)}% removed, which is over 100%. This suggests a measurement error. Please check your filter masses.`);
            }
            
            // Get checked substances
            const removedSalt = document.getElementById('removed-salt').checked;
            const removedSugar = document.getElementById('removed-sugar').checked;
            const removedOil = document.getElementById('removed-oil').checked;
            const removedFlour = document.getElementById('removed-flour').checked;
            
            // Display results
            document.getElementById('filtration-value').textContent = Math.min(percentRemoved, 100).toFixed(1) + '%';
            
            let details = `
                <strong>Calculation:</strong><br>
                • Mass trapped on filter: ${trapped.toFixed(2)}g<br>
                • Expected contaminants in ${volumeFiltered}mL: ${expected.toFixed(1)}g<br>
                • % Removed = (${trapped.toFixed(2)} ÷ ${expected.toFixed(1)}) × 100 = ${Math.min(percentRemoved, 100).toFixed(1)}%<br><br>
                
                <strong>Substances Removed:</strong><br>
                ${removedSalt ? '✓ Salt' : '✗ Salt (passed through)'}<br>
                ${removedSugar ? '✓ Sugar' : '✗ Sugar (passed through)'}<br>
                ${removedOil ? '✓ Oil' : '✗ Oil (passed through)'}<br>
                ${removedFlour ? '✓ Flour' : '✗ Flour (passed through)'}<br><br>
            `;
            
            const cappedPercent = Math.min(percentRemoved, 100);
            
            if (cappedPercent < 30) {
                details += `<div class="warning-box"><strong>Interpretation:</strong> Filtration is NOT very effective (${cappedPercent.toFixed(0)}% removed). Dissolved substances like salt and sugar pass right through!</div>`;
            } else if (cappedPercent < 70) {
                details += `<div class="warning-box"><strong>Interpretation:</strong> Filtration is somewhat effective (${cappedPercent.toFixed(0)}% removed), but many contaminants still pass through.</div>`;
            } else {
                details += `<div class="success-box"><strong>Interpretation:</strong> Filtration is effective (${cappedPercent.toFixed(0)}% removed) for particles, but dissolved substances still pass through.</div>`;
            }
            
            document.getElementById('filtration-details').innerHTML = details;
            document.getElementById('filtration-result').classList.add('show');
        }
        
        function calculateDilution() {
            const m1 = parseFloat(document.getElementById('m1').value) || 0;
            const v1 = parseFloat(document.getElementById('v1').value) || 0;
            const m2 = parseFloat(document.getElementById('m2').value) || 0;
            
            if (m1 === 0 || v1 === 0 || m2 === 0) {
                alert('Please enter all values');
                return;
            }
            
            // Validation checks
            if (m2 >= m1) {
                alert('Error: Target concentration (M₂) must be less than original concentration (M₁) for dilution!');
                return;
            }
            
            if (m2 < 0 || m1 < 0 || v1 < 0) {
                alert('Error: All values must be positive!');
                return;
            }
            
            // Calculate V2 using M1V1 = M2V2
            // V2 = (M1 × V1) / M2
            const v2 = (m1 * v1) / m2;
            const cleanWaterNeeded = v2 - v1;
            
            // Convert to gallons (1 gallon ≈ 3785g)
            const gallons = cleanWaterNeeded / 3785;
            
            // Calculate for 500 meals/day
            const mealsPerDay = 500;
            const waterPerMeal = v1; // grams
            const dailyTotalWater = mealsPerDay * waterPerMeal;
            const dailyTotalDiluted = mealsPerDay * v2;
            const dailyCleanWater = dailyTotalDiluted - dailyTotalWater;
            const dailyGallons = dailyCleanWater / 3785;
            
            // Estimate cost ($4.00 per gallon for bulk bottled water)
            const costPerGallon = 4.00;
            const dailyCost = dailyGallons * costPerGallon;
            
            // Display results
            let details = `
                <strong>Using Dilution Formula: M₁V₁ = M₂V₂</strong><br><br>
                
                <strong>Given:</strong><br>
                • M₁ (current concentration) = ${m1.toLocaleString()} ppm<br>
                • V₁ (current volume) = ${v1}g<br>
                • M₂ (target safe level) = ${m2} ppm<br><br>
                
                <strong>Solve for V₂ (final volume needed):</strong><br>
                • V₂ = (M₁ × V₁) ÷ M₂<br>
                • V₂ = (${m1.toLocaleString()} × ${v1}) ÷ ${m2}<br>
                • V₂ = ${v2.toLocaleString()}g total<br><br>
                
                <strong>Clean water needed:</strong><br>
                • ${v2.toLocaleString()}g - ${v1}g = ${cleanWaterNeeded.toLocaleString()}g<br>
                • That's <span style="font-size: 24px; font-weight: 700;">${gallons.toFixed(1)} gallons</span> of clean water!<br><br>
                
                <div class="warning-box">
                    <strong>For Food Bank Operations (500 meals/day):</strong><br>
                    • Daily contaminated water: ${(dailyTotalWater/3785).toFixed(1)} gallons<br>
                    • Daily clean water needed: <strong>${dailyGallons.toFixed(0).toLocaleString()} gallons</strong><br>
                    • Cost per gallon (bulk bottled water): $${costPerGallon.toFixed(2)}<br>
                    • Estimated daily cost: <strong>$${dailyCost.toFixed(0).toLocaleString()}</strong><br>
                    • Annual cost: <strong>$${(dailyCost * 365).toFixed(0).toLocaleString()}</strong><br><br>
                    
                    <strong>Conclusion:</strong> Dilution is NOT practical or affordable! The food bank would need ${gallons.toFixed(0)} gallons of clean water just to make ${(v1/453.6).toFixed(2)} cups of safe water. A treatment system or new well is needed.
                </div>
            `;
            
            document.getElementById('dilution-details').innerHTML = details;
            document.getElementById('dilution-result').classList.add('show');
        }
    </script>
</body>
</html>
